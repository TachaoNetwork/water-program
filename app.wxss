.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.water-content{
  font-size: 14px;
}
.water-introduce{
  margin: 10px 20px 10px 20px;
}
.water-img{
  text-align: center;
}
.water-img image{
  width: 70px;
  height: 70px;
}
.water-name{
  text-align: center;
  margin: 20px 0 20px 0;
}
.water-btn{
  margin: 0 20px 0 20px;
}
.water-btn button{
  background-color: #52bee4;
  color: #FFFFFF;
}
.water-detail{
  margin: 20px 0 20px 20px;
}